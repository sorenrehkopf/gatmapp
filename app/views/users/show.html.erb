<div class="col-sm-3 pull-left" id="sidebar">
	<%= render "shared/sidebar" %>
</div>
<div class="col-sm-9 pull-right" id="mainView">
	<div id="userShowInfo">
		<%= cl_image_tag(@user_show.picture, :width => 140, :height => 140, :crop => :fill) %>
		<h1><%= @user_show.user_name %></h1>
		<p><%= link_to "Follow.", friendships_path(:friend_id => @user_show), :method => :post %></p>
		<hr>
	</div>
	<div class="mainScroll dimmed">
			<div id="collectionView">
					<% @user_show.posts.each do |post| %>
						<div class="imageDiv" imgurl="<%= post.url %>" style="background-image: url(<%= post.url %>);"><img class="show" src="https://cdn4.iconfinder.com/data/icons/geomicons/32/672382-expand-128.png"><img class="delete" src="http://freeiconbox.com/icon/256/12960.png"><img class="post" src="https://d30y9cdsu7xlg0.cloudfront.net/png/1490-200.png"></div>
					<% end %>
			</div>
	</div>
</div>	
<%= render "shared/usersearch" %>