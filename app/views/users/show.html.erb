<div class="col-sm-3 pull-left" id="sidebar">
	<%= render "shared/sidebar" %>
</div>
<div class="col-sm-9 pull-right" id="mainView">
	<div id="userShowInfo">
		<%= cl_image_tag(@user_show.picture, :width => 140, :height => 140, :crop => :fill) %>
		<h1><%= @user_show.user_name %></h1>
		<p><%= link_to "Follow.", friendships_path(:friend_id => @user_show), :method => :post %></p>
		<span class="notification"></span>
		<hr>
	</div>
	<div class="profScroll">
			<% @sorted_posts.each do |post| %>
							<div class="well">
								<h3><%= post.user.user_name %></h3>
								<%= cl_image_tag(post.user.picture, :width => 50, :height => 50, :crop => :fill) %>
								<div class="opImgDiv" imgurl="<%= post.url %>">
								<img class="show" src="https://cdn4.iconfinder.com/data/icons/geomicons/32/672382-expand-128.png"><img class="save" src="https://cdn4.iconfinder.com/data/icons/wirecons-free-vector-icons/32/add-128.png"><img class="post" src="https://d30y9cdsu7xlg0.cloudfront.net/png/18962-200.png"></div>
								<img src="<%= post.url %>">
								<p><%= post.created_at %></p>
							</div>
							<% end %>
	</div>
</div>	
<%= render "shared/usersearch" %>